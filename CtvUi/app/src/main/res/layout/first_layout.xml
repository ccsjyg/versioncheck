<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_first_layout_1"
        android:layout_width="412dp"
        android:layout_height="290dp"
        android:clickable="true"
        android:foreground="@drawable/selector_foreground"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
    <include
        android:id="@+id/first_layout_1"
        layout="@layout/tv_layout"
        android:layout_width="412dp"
        android:layout_height="290dp"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_setting"
        android:layout_width="200dp"
        android:layout_height="141dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/CardView_first_layout_1"
        android:clickable="true"
        android:foreground="@drawable/selector_foreground"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
    <ImageView
        android:id="@+id/setting"
        android:layout_width="200dp"
        android:layout_height="141dp"
        android:background="@drawable/icon_1001"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_Background_replacement"
        android:layout_width="200dp"
        android:layout_height="138dp"
        android:layout_below="@+id/CardView_setting"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/CardView_first_layout_1"
        android:clickable="true"
        android:foreground="@drawable/selector_foreground"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/Background_replacement"
            android:layout_width="200dp"
            android:layout_height="138dp"
            android:background="@drawable/icon_1002"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_tenxun"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/CardView_setting"
        android:clickable="true"
        android:foreground="@drawable/selector_foreground"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
    <ImageView
        android:id="@+id/tenxun"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_1003"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="600dp"
        android:layout_height="138dp"
        android:layout_below="@+id/CardView_tenxun"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/CardView_Background_replacement"
        android:clickable="true"
        android:foreground="@drawable/selector_foreground"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
    <ImageView
        android:id="@+id/aiyiqi"
        android:layout_width="600dp"
        android:layout_height="138dp"
        android:background="@drawable/icon_1004"
        />
    </androidx.cardview.widget.CardView>
</RelativeLayout>